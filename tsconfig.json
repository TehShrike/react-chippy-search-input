{
	"include": ["./src/**/*"],
	"exclude": ["node_modules/**", "public/**"],
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"target": "ESNext",
		"module": "esnext",
		"rootDir": "./",
		"sourceMap": true,
		"importsNotUsedAsValues": "error",
		"preserveValueImports": true,
		"isolatedModules": true,
		"esModuleInterop": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
